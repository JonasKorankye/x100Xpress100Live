<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backgrnd" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acc_num"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/accnumEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="13"
                android:inputType="number">
                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="@string/accName"
                android:textAppearance="?android:attr/textAppearanceMedium">

            </TextView>

            <TextView
                android:id="@+id/nameofAccEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_weight="40"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <!-- <TextView
                android:id="@+id/accBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:layout_weight="30"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" /> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/acbal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="A/C balance: "
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>

            <TextView
                android:id="@+id/accBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>



        <Button
            android:id="@+id/okBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_shape"
            android:text="@string/okbutton"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="#BBBBBB" />

        <LinearLayout
            android:id="@+id/ll6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/id_pic1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_weight="50"
                android:clickable="true"
                android:contentDescription="@string/desc"
                android:src="@drawable/img">
            </ImageView>

            <ImageView
                android:id="@+id/id_pic2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_weight="50"
                android:clickable="true"
                android:contentDescription="@string/desc"
                android:src="@drawable/img">
            </ImageView>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="#BBBBBB" />


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="@string/withdrawalamt"
                android:textSize="20sp">
            </TextView>

            <EditText
                android:id="@+id/amountEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="@string/passcode"
                android:textSize="20sp">
            </TextView>

            <EditText
                android:id="@+id/passcodeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="numberDecimal">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/responseTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="@string/narration"
                android:textSize="20sp">
            </TextView>

            <EditText
                android:id="@+id/narrationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none">
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/okButton"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/button_shape"
            android:text="@string/okbutton"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</ScrollView>