<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/transfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Product"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444444"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <Spinner
            android:id="@+id/choose_prod"
            android:layout_width="fill_parent"
            android:layout_height="58dp" 
            android:background="#ffffff"
            android:prompt="@string/choose_prod"
            android:spinnerStyle="@android:style/Widget.Spinner.DropDown" />
    </RelativeLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/buttonshape_color"
        android:orientation="vertical" >

        <Button
            android:id="@+id/prod_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/retrieve_sub_prod"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    
    <ListView
        android:id="@+id/trans_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <TextView
        android:id="@+id/empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>