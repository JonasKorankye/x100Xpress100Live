<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgrnd"
    >

    <LinearLayout
        android:id="@+id/ac_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/responseTextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/beneNum"
            android:textSize="20sp"
            android:textColor="#a8a8"></TextView>

        <EditText
            android:id="@+id/NumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="20sp"></EditText>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/responseTextView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/postDate"
            android:textSize="20sp"
            android:textColor="#a8a8"></TextView>

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="20sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/transNumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/transNum"
            android:textSize="20sp"
            android:textColor="#a8a8"></TextView>

        <EditText
            android:id="@+id/transNumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="20sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/amt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/amtTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/amt"
            android:textSize="20sp"
            android:textColor="#a8a8"></TextView>

        <EditText
            android:id="@+id/amtEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="20sp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sendNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/sendNamTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/senderName"
            android:textSize="20sp"
            android:textColor="#a8a8"></TextView>

        <EditText
            android:id="@+id/sendNumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:inputType="none"
            android:textColor="@color/abc_input_method_navigation_guard"
            android:textSize="20sp"></EditText>
    </LinearLayout>


    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape"
        android:elevation="4dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Reset Token"
        android:textColor="#fff" />

</LinearLayout>