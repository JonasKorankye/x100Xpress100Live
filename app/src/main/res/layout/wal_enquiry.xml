<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgrnd"
    android:padding="5sp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".WalletEnquiry" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wal_number"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/wallet_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="7"
            android:inputType="number">

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/okBut"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/button_shape"
            android:text="@string/okbutton"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:background="#BBBBBB" />


        <LinearLayout
            android:id="@+id/avail_cust_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/custTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Customer Name :"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/custNumEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_def_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/defAccTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Default Account :"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/defAccEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_acc_link1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/accLinkTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Account Number 1:"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/accLinkEditText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_acc_link2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/accLinkTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Account Number 2:"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/accLink2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_client_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/clientType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Client Type :"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/clientTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/statusTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Status :"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/statusEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_next_of_kin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/next_of_kin_TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Next of Kin:"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/next_kin_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/avail_next_of_kin_fon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/next_of_kin_fon_TextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Next of Kin Phone:"
                android:textSize="20sp"></TextView>

            <EditText
                android:id="@+id/next_kin_fon_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:inputType="none"
                android:textSize="20sp"></EditText>
        </LinearLayout>

    </LinearLayout>

</ScrollView>